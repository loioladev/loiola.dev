---
import { slugify, formatDate } from "../data/utils";
import { Image } from "@astrojs/image/components";

const { title, pubDate, tag, image } = Astro.props;
---

<header>
  <div class="container">
    <small>
      <a href=`/category/${slugify(tag)}` class="badge">{tag}</a>
    </small>
  </div>
  <h1 class="h2">{title}</h1>
  <p>Written on {formatDate(pubDate)}</p>
  <Image
    src={image.src}
    alt={image.alt}
    width={1200}
    height={400}
    format="avif"
    fit="cover"
    quality={80}
    aspectRatio="5:2"
    class="hero-image"
  />
</header>
